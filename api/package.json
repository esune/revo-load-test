{
  "name": "api",
  "description": "Issuer Kit API",
  "version": "1.0.0",
  "homepage": "https://github.com/bcgov/issuer-kit",
  "private": true,
  "main": "src",
  "keywords": [
    "feathers"
  ],
  "author": {
    "name": "Emiliano Suñé",
    "email": "emiliano.sune@gmail.com"
  },
  "contributors": [],
  "bugs": {},
  "directories": {
    "lib": "src",
    "test": "test/",
    "config": "config/"
  },
  "engines": {
    "node": "^12.0.0",
    "npm": ">= 3.0.0"
  },
  "scripts": {
    "test": "npm run compile && npm run mocha",
    "dev": "ts-node-dev --no-notify src/",
    "serve": "npm run compile && node lib/",
    "mocha": "ts-mocha \"test/**/*.ts\" --recursive --exit",
    "compile": "shx rm -rf lib/ && tsc",
    "build": "tsc",
    "start": "node lib/"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": []
  },
  "types": "lib/",
  "dependencies": {
    "@feathersjs/configuration": "^4.5.8",
    "@feathersjs/errors": "^4.5.8",
    "@feathersjs/express": "^4.5.8",
    "@feathersjs/feathers": "^4.5.8",
    "@feathersjs/socketio": "^4.5.8",
    "@feathersjs/transport-commons": "^4.5.8",
    "axios": "^0.19.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "feathers-hooks-common": "^5.0.3",
    "feathers-mailer": "^3.0.1",
    "feathers-mongodb": "^6.1.0",
    "feathers-swagger": "^1.2.1",
    "helmet": "^3.23.3",
    "moment": "^2.27.0",
    "mongodb": "^3.6.1",
    "mongodb-core": "^3.2.7",
    "serve-favicon": "^2.5.0",
    "uuid": "^8.3.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.7",
    "@types/helmet": "0.0.47",
    "@types/mocha": "^7.0.2",
    "@types/mongodb": "^3.5.26",
    "@types/serve-favicon": "^2.5.0",
    "@types/uuid": "^8.3.0",
    "mocha": "^7.2.0",
    "nodemon": "^2.0.4",
    "shx": "^0.3.2",
    "ts-mocha": "^7.0.0",
    "ts-node-dev": "^1.0.0-pre.62",
    "tslint": "^6.1.3",
    "typescript": "^3.9.7"
  }
